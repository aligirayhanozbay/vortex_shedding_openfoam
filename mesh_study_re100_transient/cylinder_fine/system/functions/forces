forces
{
    type            forces;
    libs            (forces);

    writeControl    timeStep;
    writeInterval    1;

    // Dump to file
    log             yes;
    
    // Sampled patches
    patches         (obstacle);

    // Name of fields
	pName p;
	Uname U;

    // Density
    rho             rhoInf;             // Indicates incompressible
    rhoInf          1.225;              // Required when rho = rhoInf

    // Force calculation constants
    CofR            (0 0 0);
}


